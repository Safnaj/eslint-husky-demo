{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "rules": {
        "no-console": "error",
        "no-unused-vars": "warn",
        "no-unused-expressions": "warn",
        "no-use-before-define": "off",
        "no-tabs": "off",
        "quotes": ["warn", "single"],
        "semi": ["off", "always"],
        "react/react-in-jsx-scope": "off"
    }
}
